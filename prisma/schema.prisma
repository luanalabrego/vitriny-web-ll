datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")                     // proxy Accelerate em runtime
  directUrl = env("DIRECT_DATABASE_DATABASE_URL")     // sua var customizada
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model Product {
  // Chave primária numérica
  id           Int      @id @default(autoincrement())

  ean          String
  descricao    String
  marca        String
  cor          String
  tamanho      String

  originalUrl  String?
  imageUrl     String

  createdAt    DateTime @default(now())

  // Campo que associa o produto ao usuário logado (agora opcional para não quebrar migração)
  userId       String?

  // Índices para acelerar buscas
  @@index([ean])
  @@index([userId])
}
