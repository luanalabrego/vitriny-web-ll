// prisma/schema.prisma

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")                     // proxy Accelerate em runtime
  directUrl = env("DIRECT_DATABASE_DATABASE_URL")     // sua var customizada
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  // Chave primária numérica
  id           Int      @id @default(autoincrement())

  // Mantém EAN como campo não único
  ean          String

  descricao    String
  marca        String
  cor          String
  tamanho      String

  originalUrl  String?
  imageUrl     String

  // NOVOS CAMPOS PARA CATEGORIZAÇÃO
  label        String?   // “Aprovado” | “Reprovado” | “Refazer foto” | “Retoque Designer”
  observacao   String?   // campo de texto livre

  createdAt    DateTime @default(now())

  // Índice opcional para acelerar buscas por EAN
  @@index([ean])
}
