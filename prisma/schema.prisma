// prisma/schema.prisma

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")                     // proxy Accelerate em runtime
  directUrl = env("DIRECT_DATABASE_DATABASE_URL")     // sua var customizada
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  ean          String   @id
  descricao    String
  marca        String
  cor          String
  tamanho      String
  originalUrl  String?
  imageUrl     String
  createdAt    DateTime @default(now())
}
