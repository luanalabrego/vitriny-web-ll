// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // se no futuro você quiser rodar migrations via CLI usando conexão direta,
  // adicione aqui directUrl = env("DIRECT_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  ean          String   @id
  descricao    String
  marca        String
  cor          String
  tamanho      String
  originalUrl  String?
  imageUrl     String
  createdAt    DateTime @default(now())
}
