// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  // opcional: especificar output para evitar warning em Prisma 7
  // output   = "../node_modules/.prisma/client"
}

model Product {
  ean          String   @id
  descricao    String
  marca        String
  cor          String
  tamanho      String
  originalUrl  String?  
  imageUrl     String   
  createdAt    DateTime @default(now())
}
